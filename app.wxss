/* public */
.pull-left {
  float: left;
}

.pull-right {
  float: right;
}

.clearfix {
  zoom: 1;
}

.clearfix :after {
  display: block;
  clear: both;
  content: "";
  visibility: hidden;
  height: 0;
}

.ellip {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
/* public */s
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0;
  box-sizing: border-box;
}

.loading {
  display: block;
  position: fixed;
  width: 100%;
  height: 100%;
  text-align: center;
  background: rgba(0, 0, 0, 0.3);
  z-index: 999;
}

.loading::after {
  display: inline-block;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  content: "";
  width: 51px;
  height: 51px;
  vertical-align: middle;
  border-radius: 50%;
  background: #fff;
  animation: loading 2.4s cubic-bezier(0, 0.2, 0.8, 1) infinite;
}

@keyframes loading {
  0%, 100% {
    animation-timing-function: cubic-bezier(0.5, 0, 1, 0.5);
  }

  0% {
    transform: rotateY(0deg);
  }

  50% {
    transform: rotateY(1800deg);
    animation-timing-function: cubic-bezier(0, 0.5, 0.5, 1);
    background: #6f8;
  }

  100% {
    transform: rotateY(3600deg);
  }
}

