/* pages/audio/audiodetail/audiodetail.wxss */
.container{
  width: 100%;
}
.switch-wrap{
  margin-top: 100rpx;
  padding: 20rpx;
}
.info{
  color: #999;
  text-align: left;
}
.title{
  margin: 20rpx 0;
  color: #333;
  font-size: 60rpx;
}
.introduce{
  height: 500rpx;
}
.img-wrap{
  width: 100%;
}
.img-wrap image{
border-radius: 50%;
}
.bottom-wrap{
  position: fixed;
  bottom: 0;
  width: 100%;
}
.propress-wrap{
  display: flex;
  justify-content: center;
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
}
.time{
  width: 100rpx;
  font-size: 28rpx;
  color: #555;
}
.progress{
  width: 500rpx;
  height: 100%;
}
slider{
  margin: 0;
  height: 100%;
  line-height: 30rpx;
}
.control{
  display: flex;
  margin-top: 20rpx;
  width: 100%;
  height: 180rpx;
  line-height: 180rpx;
  text-align: center;
}
.control .iconfont{
  flex: 1;
  font-size: 60rpx;
}
.collect{
  color: #FF0064;
}
.icon-xiazai{
  color: #999;
}
.control .iconfont.main{
  color: yellow;
}
.control .iconfont.m{
  font-size: 80rpx;
}