.top-group {
  height: 60rpx;
}

.navbar {
  display: flex;
  padding: 30rpx 0;
  margin: 50rpx 0;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
}

.navbar .tab-item {
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  color: #888;
}

.navbar .tab-item.active {
  color: #222;
}

.list .list-item{
  display: flex;
  width: 100%;
  padding: 10rpx;
}
.list .list-item .name{
  width: 620rpx;
  font-size: 30rpx;
  color: #333;
}
.list-item.active{
  background: #eee;
}

.playerbar{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 125rpx;
  background: #ddd;
}
.playerbar audio{
  width: 60%;
}

